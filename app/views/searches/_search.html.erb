<% if user_signed_in? %>
  <div class="search-form-wrapper">
    <%= form_with url: searches_search_path, method: :get, local: true, html: { class: "search-form d-flex align-items-center gap-2" } do |f| %>
      <%= f.text_field :content, class: "form-control form-control-sm", placeholder: "キーワード" %>
      <%= f.select :model, options_for_select({ "ユーザー" => "user", "食べ物" => "food", "運動・筋トレ" => "exercise" }), {}, class: "form-select form-select-sm" %>
      <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }), {}, class: "form-select form-select-sm" %>
      <%= f.submit '検索', class: "btn-search btn-sm btn-primary" %>
    <% end %>
  </div>
<% end %>

<style>
.search-form-wrapper {
  width: 80%;
  display: flex;
  justify-content: flex-end; /* 常に右詰め */
  margin: 0 auto; /* 中央寄せされたい場合に備えて */
}

.search-form {
  flex-wrap: nowrap;  /* 折り返さない（スマホでも横並び） */
  gap: 0.5rem;
}

.search-form .form-control,
.search-form .form-select,
.search-form .btn {
  white-space: nowrap;
  min-width: auto;
}

</style>