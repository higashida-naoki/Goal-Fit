<div class="container">
    </br>
    <div class="row">
        <div class="col">
            <h2><%= @user.name %>さんの会員情報編集</h2>
        </div>
    </div>
    </br>
    <%= form_with model: @user, url: admin_side_user_path(@user), method: :patch do |f| %>
        <div class="row">
            <table class="table table-borderless">
                <tr>
                  <th class="col-2">プロフィール画像</th>
                    <td><%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %><td>
                </tr>
                <tr>
                    <th class="col-2">名前</th>
                    <td class="col"><%= f.text_field :name %></td>
                </tr>
                <tr>
                    <th class="col-2">ニックネーム</th>
                    <td class="col"><%= f.text_field :nickname %></td>
                </tr>
                <tr>
                    <th class="col-2">自己紹介</th>
                    <td class="col">  <%= f.text_area :introduction %></td>
                </tr>
                <tr>
                    <th class="col-2">メールアドレス</th>
                    <td class="col"><%= f.text_field :email %></td>
                </tr>
                <tr>
                    <th class="col-2">会員ステータス</th>
                    <td class="col">
                        <%= f.radio_button :is_active, true %>
                        <%= f.label :is_active, "有効" %>
        
                        <%= f.radio_button :is_active, false %>
                        <%= f.label :is_active, "退会済み" %>
                    </td>
                </tr>
                <tr>
                    <th class="col-2"></th>
                    <td class="col"><%= f.submit "変更を保存", class: "btn btn-success" %></td>
                </tr>
            </table>
        </div>
    <% end %>
</div>

