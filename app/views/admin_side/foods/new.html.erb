<h2>新しい食べ物を追加</h2>
<%= form_with(model: @food, url: admin_side_foods_path, local: true) do |f| %>
  <% if @food.errors.any? %>
    <div class="alert alert-danger">
      <h4>修正が必要な項目があります:</h4>
      <ul>
        <% @food.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, '食べ物' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category, 'カテゴリー' %>
    <%= f.text_field :category, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :calories, 'カロリー' %>
    <%= f.number_field :calories, class: 'form-control' %>
  </div>

  <%= f.submit '保存', class: 'btn btn-primary' %>
<% end %>
