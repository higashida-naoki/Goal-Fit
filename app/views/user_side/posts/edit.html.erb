<h2>投稿編集</h2>

<% if @post.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: post_path, method: :patch do |f| %>
  <table>
    <tr>
      <th>ニックネーム</th>
      <td><%= @post.user.nickname %><td>
    </tr>
    <tr>
      <th>朝食</th>
      <td><%= f.text_field :breakfast %><td>
    </tr>
    <tr>
      <th>昼食</th>
      <td><%= f.text_field :lunch %><td>
    </tr>
    <tr>
      <th>夕食</th>
      <td><%= f.text_field :dinner %><td>
    </tr>
    <tr>
      <th>間食</th>
      <td><%= f.text_field :dessert %><td>
    </tr>
    <tr>
      <th>摂取カロリー</th>
      <td><%= f.text_field :calorie_intake %><td>
    </tr>
    <tr>
      <th>消費カロリー</th>
      <td><%= f.text_field :calories_consumed %><td>
    </tr>
    <tr>
      <th>今日の体重</th>
      <td><%= f.text_field :weight %><td>
    </tr>
    <tr>
      <th>今日のBody</th>
      <td><%= f.text_field :body %><td>
    </tr>
    <tr>
      <th>努力ポイント</th>
      <td><%= f.text_area :effort_point %><td>
    </tr>
  </table>
  <%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
<% end %>