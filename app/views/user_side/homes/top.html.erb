<main>
  <div class="top-page">
    <div class="image-container">
      <img src="<%= asset_path('forest2.jpg') %>" alt="Forest Image" class="background-image">
      <div class="image-text">
        <h1>Every step takes you closer to your goal, <br>stay fit and believe.</h1>
      </div>
      <div class="button-container">
        <%= link_to '新規登録', new_user_registration_path, class: 'btn' %>
        <%= link_to 'ログイン', new_user_session_path, class: 'btn' %>
        <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: 'btn' %>
      </div>
    </div>
  </div>
</main>

<style>
  /* TOPページのスタイル */
  .top-page {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh; /* ビューポートの高さを適用 */
    position: relative;
    text-align: center;
    flex-direction: column;
  }
  
  .image-container {
    position: relative;
    width: 100%;
    max-width: flex; /* 画像の最大幅 */
    height: 500px; /* 画像の縦幅 */
    overflow: hidden;
    margin-top: -100px;
  }
  
  .background-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover; /* 縦横比を維持しつつ、コンテナにフィット */
    border-radius: 10px; /* 角を少し丸める（好みに応じて調整） */
  }
  
  .image-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 2rem;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6); /* 文字に影をつける */
    margin-top: -100px;
  }
  
  /* ボタンのスタイル */
  .button-container {
    position: absolute;
    bottom: 30px; /* 画像の下部に配置 */
    left: 50%;
    transform: translateX(-50%); /* 中央寄せ */
    display: flex;
    gap: 20px;
  }

  .btn {
    background-color: white;
    color: black;
    padding: 12px 24px;
    border-radius: 50px; /* 楕円形にする */
    text-decoration: none;
    font-size: 1rem;
    font-weight: bold;
    text-align: center;
    transition: background-color 0.3s;
  }

  .btn:hover {
    background-color: #f0f0f0; /* ホバー時の背景色 */
  }

  @media (max-width: 768px) {
    .image-text {
      font-size: 1.5rem;
    }
    .btn {
      font-size: 0.9rem; /* モバイル用にボタンの文字サイズを小さく */
      padding: 10px 20px; /* ボタンの内側の余白を小さく */
    }
  }
</style>
