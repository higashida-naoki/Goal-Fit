 <table>   
  <% users.each do |user| %>
      <tr>
        <td>フォロー: <%= user.followings.count %></td>
        <td>フォロワー: <%= user.followers.count %></td>
        <td>
        <% if current_user != user %>
        <% if current_user.following?(user) %>
          <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-secondary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-primary" %>
        <% end %>
      <% end %>
        </td>
      </tr>
    <% end %>
  </table>
