 <table>
  <div class="d-flex justify-content-around mb-3">
    <p class="mb-0"><strong>フォロー数: <%= user.followings.count %></strong></p>
    <p  class="mb-0"><strong>フォロワー数: <%= user.followers.count %></strong></p>
  </div>
  <div class="d-flex justify-content-center">
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー中", user_relationships_path(user), method: :delete, class: "btn btn-secondary mx-1" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-primary mx-1" %>
      <% end %>
    <% end %>
  </div>
</table>
