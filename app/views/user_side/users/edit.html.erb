<div class="container">
<h2>ユーザー情報編集</h2>
  <div class="row">
    <div class="col">
      <%= render 'layouts/errors', obj: @user %>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <table>
          <tr>
            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control-file user", accept: 'image/*' %>
          <tr>
          <tr>
            <th>ニックネーム</th>
            <td><%= f.text_field :nickname %><td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= f.text_area :introduction %><td>
          </tr>
          <tr>
            <th>身長</th>
            <td><%= f.text_field :height %><td>
          </tr>
          <tr>
            <th>理想の体重</th>
            <td><%= f.text_field :ideal_weight %><td>
          </tr>
          <tr>
            <th>1日の目標摂取カロリー</th>
            <td><%= f.text_field :target_calorie_intake %><td>
          </tr>
          <tr>
            <th>1日の目標消費カロリー</th>
            <td><%= f.text_field :target_calories_consumed %><td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
        </table>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
        <%= link_to "退会する", unsubscribe_path, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger" %></td>
      <% end %>
    </div>
  </div>
</div>
