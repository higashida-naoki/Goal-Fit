<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorite_path(post), method: :delete, remote: true, style: "color: red;", id: "favorite-#{post.id}" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
   ♡ <%= post.favorites.count %> 
  <% end %>
<% else %>
  <%= link_to post_favorite_path(post), method: :post, remote: true, id: "favorite-#{post.id}" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
   ♡ <%= post.favorites.count %> 
  <% end %>
<% end %>
