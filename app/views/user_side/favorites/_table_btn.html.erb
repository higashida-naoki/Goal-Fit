<% if post.favorited_by?(current_user) %>
<th>いいね数</th>
  <td><%= link_to post_favorites_path(post), method: :delete, remote: true, style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %> 
  <% end %></td>
<% else %>
<th>いいね数</th>
  <td><%= link_to post_favorites_path(post), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %> 
  <% end %></td>
<% end %>
